<div class="well">
    <table>
      <tr style="vertical-align: baseline;">
        <td>
    <%=user.email %>
        </td>
        <td>
    <%= simple_form_for(user) do |f| %>
        <%=f.input :role, collection: (User.roles.keys).map{|role| [role.titleize, role]}, label: false %>
        </td>
        <td>
        <%=f.submit class: "btn btn-default" %>
    <% end %>
        </td>
        <td>
            <%=link_to "delete", user_path(user), class: 'btn btn-default', method: :delete%>
        </td>
      </tr>
    </table>
</div>